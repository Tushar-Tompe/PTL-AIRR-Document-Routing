<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Trace"
      internalLogFile="${basedir}/nlog-internal.log">

  <!-- enable MailKit target by adding it to the extensions -->
  <extensions>
    <add assembly="NLog.MailKit"/>
  </extensions>

  <!-- the targets to write to -->
  <targets>
    <!-- write logs to file -->
    <target xsi:type="File" name="logfile" fileName="${basedir}/logs/${shortdate}.log"
            layout="${longdate} | ${level:uppercase=true} | ${message} | ${exception:format=ToString}" />

    <!-- write logs to console -->
    <target xsi:type="Console" name="logconsole"
            layout="${longdate} | ${level:uppercase=true} | ${message} | ${exception:format=ToString}" />

    <!-- write logs to email -->
	  <target xsi:type="MailKit"
			  name="mail"
			  smtpServer="SMTPrelay.spi.simonspetroleum.com"
			  smtpPort="25"
			  from="srv-alerts@pilotthomas.com"
			  to="Tushar.Tompe@pilotthomas.com; harshavardhan.manikanta@pilotthomas.com"
			  subject="PTL Document Router Service - ${level} Alert - ${machinename}"
			  html="true"
			  secureSocketOption="None">

		  <body>
			  <![CDATA[
<html>
<body style='font-family: Arial, sans-serif; font-size: 14px; color: #333;'>

<div style='background-color:#c0392b; padding:12px 20px; border-radius:4px 4px 0 0;'>
    <h2 style='color:#fff; margin:0;'>âš  PTL Document Router Service - Error Alert</h2>
</div>

<div style='padding:20px; border:1px solid #ddd; border-top:none; border-radius:0 0 4px 4px;'>

<p><strong>Environment:</strong> Test</p>
<p><strong>Timestamp:</strong> ${longdate}</p>
<p><strong>Machine Name:</strong> ${machinename}</p>
<p><strong>Context:</strong> ${message}</p>

<hr style='border:none; border-top:1px solid #eee; margin:16px 0;'/>

<h3 style='color:#c0392b;'>Exception Details</h3>

<p><strong>Type:</strong> ${exception:format=Type}</p>
<p><strong>Message:</strong> ${exception:format=Message}</p>

<p><strong>Stack Trace:</strong></p>

<pre style='background:#f4f4f4; padding:12px; border-radius:4px; font-size:12px; overflow-x:auto;'>
${exception:format=StackTrace}
</pre>

</div>
</body>
</html>
      ]]>
		  </body>
	  </target>

  </targets>

  <!-- rules to map from logger name to target name -->
  <rules>
    <!-- all logs including info to file -->
    <logger name="*" minlevel="Info" writeTo="logfile,logconsole" />

    <!-- all errors and fatals to mail -->
    <logger name="*" minlevel="Error" writeTo="mail" />
  </rules>

</nlog>
